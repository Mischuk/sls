.m_detail-filters
  box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
  border-radius $radius
  margin-top 30px
  background #fff
  @media SM
    position relative
    margin-top 0
  .detail-filters-header
    position relative
    padding 25px
    background url("../images/yellow_pattern.jpg") repeat 0 0
    .toggle
      height 60px
      text-align center
      margin-bottom 20px
      @media MD
        width 200px
        position absolute
        left 25px
        top 50%
        margin-top -30px
        margin-bottom 0
      a
        background #fff
        border-radius $radius
        color #222
        display inline-block
        vertical-align middle
        padding 15px 20px
        padding-left 35px
        position relative
        text-decoration none
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -450px -450px;
          width: 11px;
          height: 16px;
          position absolute
          left 15px
          top 50%
          margin-top -8px
        &:hover
          background $red
          color #fff
          &:after
            background-position -450px -475px
    .desc
      width 100%
      line-height 20px
      text-align center
      futuris()
      color #222
      text-transform uppercase
      font-size 16px
      @media XS
        font-size 18px
      @media SM
        font-size 21px
      @media MD
        text-align left
        padding-left 220px
  .detail-filters-body
    display none
    padding 25px
    padding-top 0
    .conditions
      label
        sn()
        position relative
        display inline-block
        vertical-align middle
        padding-left 25px
        cursor pointer
        input[type="checkbox"]
          display none
        input[type="checkbox"]:checked + .icon
          background $red
          border-color $red
          &:after
            opacity 1
            transform scale(1)
        input[type="checkbox"]:checked + .icon + .label
          color #000
        .icon
          anim()
          position absolute
          left 0
          top 0px
          size(20px)
          border 1px solid #d1d9da
          border-radius $radius
          background #fff
          &:after
            anim()
            content ''
            sprite()
            width 11px
            height 8px
            position absolute
            left 50%
            top 50%
            margin-left -5.5px
            margin-top -4px
            background-position -350px 0
            opacity 0
            transform scale(0)
        .label
          display inline-block
          vertical-align middle
          color #222222
          font-size 12px
          line-height 18px
          font-style normal
          a
            color $red
            &:hover
              text-decoration underline
    .columns
      overflow hidden
      padding-top 25px
      @media XS
        padding-top 0
      .column
        margin-bottom 30px
        &:last-child
          margin-bottom 0
        @media XS
          float left
          width 100%
          margin-bottom 0
          margin-top 30px
          &:nth-child(3),
          &:nth-child(4)
            width 50%
        @media MD
          float left
          width 25%
          padding-right 40px
          &:nth-child(1),
          &:nth-child(2)
            width 30%
          &:nth-child(3),
          &:nth-child(4)
            width 20%
    .f-title
      font-size 14px
      margin-bottom 10px
    .inputs
      .checkbox
        margin-bottom 10px
        &:last-child
          margin-bottom 0
    .bottom-options
      padding-top 25px
      cursor default
      .reset,
      .submit
        anim()
        padding 10px 10px
        border-radius $radius
        font-size 12px
        text-transform uppercase
        background #fff
        color $blue
        border 1px solid $blue
        background none
        margin-right 10px
        @media XS
          padding 10px 15px
        &:hover
          background $blue
          color #fff
    .price-range
      margin-bottom 10px
      padding-left 10px
      padding-right 10px
      .noUi-target
        background #d1d9da
        border-radius 0
        border none
        box-shadow none
      .noUi-horizontal
        height 4px
        .noUi-handle
          left -9px
      .noUi-connect
        background $red
        box-shadow none
      .noUi-handle
        width 16px
        height 16px
        border 2px solid #e97072
        box-shadow 0 2px 2px rgba(0,0,0,.1)
        border-radius 50%
        &:after,
        &:before
          display none
      .noUi-pips-horizontal
        height 10px
        padding 0
        top -3px
        // z-index 10
      .noUi-marker-horizontal.noUi-marker-large,
      .noUi-marker-horizontal.noUi-marker
        height 10px
        background #d1d9da
      .noUi-value-horizontal
        font-size 12px
        font-weight normal
        color #999
        top -20px
        transform none
        &:last-child
          left auto !important
          right 0 !important
    .price-inputs
      clearfix()
      margin-bottom 40px
      input
        width 48%
        height 36px
        border-radius $radius
        border 1px solid #d1d9da
        padding 0 10px
        font-size 12px
        color #555
      #width-input-start,
      #depth-input-start
        float left
      #width-input-finish,
      #depth-input-finish
        float right
  .ask-form
    .columns
      overflow visible
      margin-bottom 20px
      @media XS
        padding-top 20px
      @media MD
        .form-row
          width 49%
          display inline-block
          vertical-align top
          margin-top 0 !important
          .input
            float none
            width 94%
            margin-left 0 !important
            & + .input
              margin-top 20px !important
    .form-row
      clearfix()
      .input
        @media XS
          float left
          width 48%
        & + .input
          margin-top 20px
          @media XS
            margin-top 0
            margin-left 4%
      & + .form-row
        margin-top 20px
      textarea,
      input
        background #fff
        anim()
        border 1px solid $border
        border-top none
        border-left none
        border-right none
        border-radius $radius
        background #fff
        font-size 16px
        width 100%
        roman()
        &:focus
          font-weight normal
          border-color $red
      input
        height 40px
      textarea
        resize none
      .reset
        width 105px
        display inline-block
        vertical-align middle
        text-align center
        height 35px
        line-height 35px
        border 1px solid $blue
        color $blue
        background none
        border-radius $radius
        anim()
        font-size 12px
        text-transform uppercase
        @media XS
          width 115px
        &:hover
          background $blue
          color #fff
      .submit
        display inline-block
        vertical-align middle
        text-align center
        width 185px
        height 50px
        line-height 50px
        border-radius $radius
        font-size 15px
        border none
        color #222
        roman()
        background $yellow
        @media XS
          width 115px
        &:hover
          background $red
          color #fff