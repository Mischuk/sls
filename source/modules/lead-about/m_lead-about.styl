.m_lead-about
  padding 30px 0
  @media LG
    padding-top 60px
  h2
    margin-bottom 20px
    futuris()
    text-transform uppercase
    font-size 27px
  @media SM
    .columns
      display block
      position relative
      padding-left 50%
    .column
      position relative
      &:first-child
        position absolute
        left 0
        top 0
        width 48%
        height 100%
    .image
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size contain
      padding 10px
      position absolute
      left 0
      top 0
      width 100%
      height 100%
  .action
    margin-top 10px
    a
      anim()
      display inline-block
      border 1px solid $yellow
      border-radius $radius
      background none
      color #222
      height 40px
      line-height 38px
      padding 0 20px
      box-shadow none
      &:hover
        color #333
        background $yellow
        border-color $yellow
        i
          background-position -150px -25px

      i
        display inline-block
        vertical-align middle
        background: url('../images/sprite.png') no-repeat -150px -25px
        width: 12px;
        height: 12px;
        margin-top -2px
        margin-left 2px