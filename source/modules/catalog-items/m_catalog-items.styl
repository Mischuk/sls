.m_catalog-items
  position relative
  .header
    overflow hidden
    line-height 15px
    padding 10px 0
    @media LG
      padding-top 0
    .sort
      float left
      font-size 14px
      @media LG
        line-height 35px
      .label
        display inline-block
        vertical-align middle
        color #555555
        margin-right 10px
      a
        display inline-block
        vertical-align middle
        padding 0 5px
        color #555555
        &:hover
          color $red
          span
            border-color transparent
        span
          display inline-block
          vertical-align middle
          line-height 1
          border-bottom 1px dashed #555555
        i
          display none
    .display
      float right
      cursor default
      display none
      font-size 0
      @media LG
        display block
      a
        anim()
        display inline-block
        vertical-align middle
        width 35px
        height 35px
        background #fff
        border 1px solid #dcdcdc
        position relative
        &:hover,
        &.current
          background $red
          border-color $red
          &.display-grid:after
            background-position -350px -475px
          &.display-row:after
            background-position -400px -475px
        &.display-grid
          &:after
            content ''
            sprite()
            background-position -350px -450px
            width: 13px;
            height: 13px;
            position absolute
            left 50%
            top 50%
            margin-left -6.5px
            margin-top -6.5px
        &.display-row
          &:after
            content ''
            sprite()
            background-position -400px -450px
            width: 13px;
            height: 13px;
            position absolute
            left 50%
            top 50%
            margin-left -6.5px
            margin-top -6.5px
  .list
    overflow hidden
    margin-left -10px
    margin-right -10px
    @media SM
      margin-left 0
      margin-right 0
  .item
    padding 10px
    @media XS
      float left
      width 50%
      &:nth-child(odd)
        padding-left 0
      &:nth-child(even)
        padding-right 0
    @media LG
      width 33.333%
      padding 7.5px 5px
      &:nth-child(odd)
        padding-left 5px
      &:nth-child(even)
        padding-right 5px
      &:nth-child(3n+1)
        padding-left 0
        padding-right 10px
      &:nth-child(3n)
        padding-right 0
        padding-left 10px
  .display-row
    @media LG
      overflow visible !important
      .item
        float none
        width 100%
        padding-left 0 !important
        padding-right 0 !important
        .m_item
          height 230px
          anim()
          &:hover
            box-shadow 0 6px 32px rgba(0,0,0,.2)
      .image
        float left
        width 250px
        padding-right 15px
        height 229px
        line-height 229px
        a
          &:after
            display none
      .details,
      .bottom
        padding-left 250px
      .bottom
        border-top none
        padding-bottom 15px
        padding-right 15px
        height 60px
      .status-compare
        max-width 200px
        .compare
          display block !important
      .price
        position absolute
        right 15px
        top 0
        width 170px
        text-align right
        .old
          margin-right 0 !important
        .current
          display block !important
          font-size 20px !important
          &:after
            content ''
            position relative !important
            display inline-block !important
            vertical-align middle !important
            margin-left 5px
            margin-top -4px !important
      .action
        position absolute
        right 65px
        top 75px
  &.full-width
    .item
      @media SM
        width 33.333%
        padding 7.5px 5px
      @media LG
        width 25%