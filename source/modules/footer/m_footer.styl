.m_footer
  position absolute
  left 0
  bottom 0
  width 100%
  padding 20px 0
  font-size 14px
  color #999
  background url("../images/patterns/pattern5.jpg") repeat 0 0
  text-align center
  @media XS
    padding 30px 0
    text-align left
  @media LG
    padding 40px 0
  .info
    @media XS
      float left
      width 50%
      text-align left
    @media SM
      width 25%
    .desc
      padding 10px
      @media XS
        padding-left 0
      @media SM
        padding-top 25px
  .menu
    display none
    @media SM
      clearfix()
      display block
      float left
      width 50%
    @media LG
      width 40%
    .column
      float left
      width 50%
      padding-left 5%
    .title
      margin-bottom 15px
      color #fff
      text-transform uppercase
    ul
      li
        padding 10px 0
        a
          anim()
          color #999
          text-decoration underline
          &:hover
            text-decoration none
            color #fff
  .contacts
    clearfix()
    @media SM
      float left
      width 25%
    @media LG
      width 35%
      padding-left 50px
    > div
      @media XS
        float left
        width 50%
      @media SM
        float none
        width 100%
    .phones
      @media XS
        position absolute
        right 0
        top 0
        text-align left
      @media SM
        position static
      a
        color #fff
      .tel
        font-size 20px
        @media LG
          display inline-block
          vertical-align middle
        bold()
        a
          position relative
          cursor default
          padding-left 30px
          &:after
            content ''
            position absolute
            left 0
            top 50%
            margin-top -10px
            width: 22px;
            height: 23px;
            sprite()
            background-position -99px 0
      .callback
        max-width 200px
        margin 10px auto
        @media XS
          margin 10px 0
        @media SM
          margin-top 25px
          margin-bottom 25px
        @media MD
          margin-top 15px
        @media LG
          display inline-block
          vertical-align middle
          margin-top 0
          margin-bottom 0
          margin-left 30px
        a
          anim()
          display inline-block
          vertical-align middle
          height 100%
          width auto
          background $yellow
          border-radius $radius
          color #333
          padding 5px 10px
          box-shadow inset 1px 2px 2px rgba(249, 166, 26, .3), 2px 3px 2px -2px rgba(249, 166, 26, .3)
          &:hover
            box-shadow none
            background $red
            color #fff
    .locate, .socials
      @media XS
        margin-top 20px
        margin-bottom 0
        text-align left
      @media SM
        margin-top 25px
        margin-bottom 15px
    .locate
      margin-bottom 0px
      @media XS
        padding-right 20px
      @media SM
        padding-right 0
      > div
        margin-bottom 5px
        @media LG
          margin-bottom 25px
      .email
        a
          color $yellow
          &:hover
            text-decoration underline
    .socials
      ul
        display inline-block
        vertical-align middle
        text-align center
        cursor default
        @media XS
          text-align left
        @media SM
          display block
          margin-top 5px
        @media MD
          margin-top 0
          display inline-block
          padding-left 5px
        @media LG
          display inline-block
          vertical-align middle
          padding-left 10px
          padding-top 0
        li
          display inline-block
          vertical-align middle
          margin 0 1px
          @media XS
            margin-left 0
            margin-right 10px
        a
          anim()
          display block
          width 24px
          height 24px
          background-image url("../images/socials.png")
          background-repeat no-repeat
          &.vk
            background-position 0 0
          &.facebook
            background-position -28px 0
          &.twitter
            background-position -56px 0
          &:hover
            opacity .8
  .developed
    border-top 1px solid #464646
    padding-top 9px
    margin-top 9px
    @media XS
      padding-top 15px
      margin-top 15px
      text-align right
    @media SM
      display block
      float left
      width 100%
    @media MD
      padding-top 30px
    @media LG
      margin-top 30px
    a
      anim()
      color #fff
      text-decoration underline
      &:hover
        color #fff
        text-decoration none
