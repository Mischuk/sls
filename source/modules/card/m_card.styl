.m_card
  position relative
  .top
    background #fff
    box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    border-radius $radius
    @media MD
      position relative
  .card-gallery
    position relative
    padding 15px
    text-align center
    @media MD
      position absolute
      left 0
      top 0
      width 30%
      height 100%
    img
      display inline-block
      vertical-align middle
      max-width 100%
      max-height 100%
      @media MD
        position relative
        top 50%
        transform translateY(-50%)
    .card-info
      position absolute
      left 0
      top 0
      padding 15px
      text-align left
      z-index 1
      > div
        margin 5px 0
        cursor default
        &.new span
          background #408f24
        &.popular span
          background $red
        &.sales span
          background $yellow
        span
          display inline-block
          vertical-align middle
          padding 5px
          bold()
          text-transform uppercase
          font-size 10px
          border-radius $radius
          color #fff
  .card-details
    padding-top 15px
    padding-left 15px
    padding-right 15px
    @media MD
      width 70%
      padding-left 30px
      margin-left 30%
      padding-top 30px
      padding-bottom 15px
      padding-right 30px
    .card-info
      position relative
      .status
        @media screen and (min-width: 540px)
          display inline-block
          vertical-align middle
          padding-right 15px
        .available,
        .not-available
          font-size 14px
        .available
          color #16a120
        .not-available
          color $red
      .label
        display inline-block
        vertical-align middle
        color #555555
        font-size 15px
      .value
        display inline-block
        vertical-align middle
        color #555555
        font-size 15px
        a
          color $red
          text-decoration underline
          &:hover
            color #000
            text-decoration none
      .status + .row
        padding-right 80px
      .row
        margin-bottom 15px
        overflow hidden
        @media LG
          margin-bottom 31px
        &:last-child
          margin-bottom 0
      .articul, .produced
        display inline-block
        vertical-align middle
        margin-right 10px
      .compare
        float right
        a
          anim()
          position relative
          color $red
          font-size 14px
          &:after
            anim()
            content ''
            width: 18px;
            height: 20px;
            sprite()
            position absolute
            left -25px
            top 50%
            margin-top -10px
            background-position -400px -50px
            opacity .4
          &:hover
            color #222
            text-decoration none
            &:after
              opacity 1
      .prices
        float left
        .old, .current
          display inline-block
          vertical-align middle
          line-height 22px
          position relative
        .old
          text-decoration line-through
          color #999
          font-size 14px
          margin-right 20px
          display none
          @media XS
            display inline-block
          &:after
            content ' руб.'
        .current
          font-weight bold
          font-size 22px
          &:after
            content ' руб.'
      .parameters
        .item
          display inline-block
          vertical-align top
          margin-right 10px
          padding-bottom 10px
          &:last-child
            padding-bottom 0
    .card-options
      margin 15px 0
      @media screen and (min-width: 540px)
        clearfix()
        text-align center
        padding 10px 0
      @media LG
        padding 20px 0
      .total-items
        width 110px
        height 35px
        text-align center
        line-height 33px
        border 1px solid #d1d9da
        border-radius $radius
        overflow hidden
        @media XS
          display inline-block
          vertical-align middle
        input
          float left
        .qty
          width 60px
          height 34px
          border 1px solid #d1d9da
          border-top none
          border-bottom none
          text-align center
          font-size 16px
          color #555555
        .qtyminus,
        .qtyplus
          width 24px
          height 34px
          background #fff
          color #555
          border none
          color #999999
          font-weight bold
          &:hover
            background #fff - 5%

      .short-buy
        margin-top 10px
        @media screen and (min-width: 540px)
          margin-top 0
        a
          display inline-block
          vertical-align middle
          text-align center
          width 180px
          height 35px
          line-height 35px
          border-radius $radius
          font-size 15px
          position relative
          color #222
          padding-left 15px
          box-shadow: inset 1px 2px 2px rgba(249,166,26,0.3), 2px 3px 2px -2px rgba(249,166,26,0.3);
          border 1px solid $yellow
          &:hover
            background $yellow
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -450px -100px;
            width: 12px;
            height: 16px;
            position absolute
            left 20px
            top 50%
            margin-top -8px
      .add-to-cart
        margin-top 10px
        @media screen and (min-width: 540px)
          margin-top 0
        a
          position relative
          display inline-block
          vertical-align middle
          width 120px
          height 35px
          text-align center
          line-height 35px !important
          border-bottom none !important
          border-radius $radius
          color #222
          font-size 15px !important
          padding-left 15px
          background $yellow
          box-shadow: inset 1px 2px 2px rgba(249,166,26,0.3), 2px 3px 2px -2px rgba(249,166,26,0.3);
          &:hover
            background $red
            color #fff
            &:after
              background-position -200px -100px
          &:after
            content ''
            background: url(../images/sprite.png) no-repeat -150px -100px;
            width: 16px;
            height: 16px;
            position: absolute;
            left: 20px;
            top: 50%;
            margin-top: -8px;
      .total-items
        @media screen and (min-width: 540px)
          float left
      .short-buy,
      .add-to-cart
        @media screen and (min-width: 540px)
          float right
          margin-left 10px
        @media LG
          margin-left 20px
          float left
    .card-desc
      font-size 15px
      line-height 24px
      roman()
      color #555555
    .commerce-services
      margin-bottom 15px
      @media XS
        margin-bottom 0
      > div
        position relative
        padding-left 20px
        margin-bottom 10px
        @media XS
          display inline-block
          vertical-align middle
          margin-right 10px
        &:after
          content ''
          sprite()
          position absolute
          left 0
          top 50%
        &.cirs-buy
          &:after
            width 16px
            height 16px
            margin-top -7px
            background-position -200px -50px
          &:hover:after
            background-position -150px -50px
        &.cirs-pay
          &:after
            width 17px
            height 16px
            margin-top -7px
            background-position -100px -50px
          &:hover:after
            background-position -100px -100px
        &.cirs-delivery
          &:after
            width 16px
            height 13px
            margin-top -7px
            background-position -50px -50px
          &:hover:after
            background-position 0px -50px
        &.cirs-license
          &:after
            width 15px
            height 16px
            margin-top -7px
            background-position -50px -100px
          &:hover:after
            background-position 0px -100px
        a
          color $blue
          font-size 14px
          text-decoration underline
          &:hover
            color #000
            text-decoration none
    .card-social-share
      font-size 15px
      color #555
      padding 15px 0
      margin-top 15px
      border-top 1px solid #dcdcdc
      @media LG
        line-height 40px
      ul
        display block
        padding-top 5px
        text-align left
        cursor default
        @media XS
          text-align left
          display inline-block
          vertical-align middle
          padding-left 10px
        @media LG
          display inline-block
          vertical-align middle
          padding-left 10px
          padding-top 0
        li
          display inline-block
          vertical-align middle
          size(40px)
          margin-right 10px
          @media XS
            margin-left 0
            margin-right 10px
        a
          anim()
          position relative
          display block
          size(100%)
          &:after
            content ''
            position absolute
            left 50%
            top 50%
            sprite()
          &.vk
            background #3e628a
            &:hover
              background #3e628a - 15%
            &:after
              background-position -50px -400px
              width 16px
              height 10px
              margin-left -(@width/2)
              margin-top -(@height/2)
          &.facebook
            background #375794
            &:hover
              background #375794 - 15%
            &:after
              background-position -100px -400px
              width 8px
              height 16px
              margin-left -(@width/2)
              margin-top -(@height/2)
          &.twitter
            background #00aced
            &:hover
              background #00aced - 15%
            &:after
              background-position -150px -400px
              width 14px
              height 12px
              margin-left -(@width/2)
              margin-top -(@height/2)
    .card-contact-form
      background #fff
      border 1px solid #eeefef
      padding 20px
      color #999999
      font-size 12px
      line-height 16px
      text-align center
      position relative
      .desc
        margin-bottom 20px
        @media LG
          padding-right 200px
          text-align left
          margin-bottom 0
      .action
        height 60px
        text-align center
        @media LG
          position absolute
          right 20px
          top 50%
          margin-top -30px
        a
          anim()
          position relative
          display inline-block
          vertical-align middle
          padding 20px 30px
          background #fff
          font-size 16px
          color $blue
          border-radius 30px
          box-shadow 0 6px 16px rgba(0,0,0,.1)
          @media XS
            padding 20px 60px
          @media LG
            padding 20px 30px
          span
            display inline-block
            vertical-align middle
            line-height 1
            border-bottom 1px dashed $blue
          &:hover
            color #000
            box-shadow 0 6px 32px rgba(0,0,0,.2)
            span
              border-color #000
  .bottom
    padding-top 30px
    .card-tabs-header
      overflow hidden
      a
        anim()
        display inline-block
        vertical-align middle
        height 50px
        line-height 50px
        border 1px solid #eeefef
        padding 0 10px
        background #f7f9f9
        font-weight bold
        text-transform uppercase
        font-size 14px
        float left
        @media screen and (min-width: 380px)
          width 48%
          text-align center
        @media XS
          width auto
          float none
        & + a
          float right
          @media XS
            float none
            margin-left 10px
        &.current
          cursor default
        &.current,
        &:hover
          background #fff
          span
            color #000
            border-color #fff
        span
          anim()
          color #999999
          display inline-block
          vertical-align middle
          border-bottom 1px dashed #999
          line-height 1
        @media XS
          padding 0 40px
          font-size 16px
    .card-tabs-content
      margin-top 15px
      article
        border 1px solid #eeefef
        padding 20px
      .item
        display none
        &.current
          display block
  .m_pluses
    clearfix()
    margin-left 0
    margin-right 0
    @media MD
      padding-top 50px
    @media LG
      padding-top 60px
      padding-bottom 40px
    .column
      width 50%
      @media screen and (max-width: 991px)
        &:nth-child(2n+1)
          clear left
      @media MD
        width 25%
  .card-description
    background #fff
    box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    border-radius $radius
    padding 15px
    @media SM
      padding 30px
    h2
      line-height 1
      font-size 21px
      text-transform uppercase
      margin-bottom 15px
      @media SM
        font-size 24px
    p
      font-size 15px
      line-height 24px
      color #555
  .card-contact-form
    background url("../images/yellow_pattern.jpg") repeat 0 0
    margin-top 30px
    box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
    border-radius $radius
    padding 15px
    @media SM
      position relative
      padding 30px
      padding-right 200px
    .desc
      futuris()
      color #222
      text-transform uppercase
      font-size 16px
      @media XS
        font-size 18px
      @media SM
        font-size 21px
    .action
      margin-top 15px
      @media SM
        position absolute
        right 30px
        top 50%
        height 42px
        margin-top -21px
      a
        background #fff
        border-radius $radius
        color #222
        display inline-block
        vertical-align middle
        padding 10px 15px
        padding-left 35px
        position relative
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -450px -450px;
          width: 11px;
          height: 16px;
          position absolute
          left 15px
          top 50%
          margin-top -8px
        &:hover
          background $red
          color #fff
          &:after
            background-position -450px -475px