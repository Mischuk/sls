.m_sidebar-ask
  background url("../images/yellow_pattern.jpg") repeat 0 0
  padding 20px
  margin-bottom 30px
  border-radius $radius
  box-shadow 1px 1px 4px rgba(0,0,0,.3)
  .action
    margin-bottom 20px
  .action
    height 60px
    text-align center
    a
      roman()
      position relative
      display inline-block
      vertical-align middle
      padding 20px 30px
      background #fff
      font-size 16px
      color #222
      border-radius $radius
      @media XS
        padding 20px 60px
      @media SM
        padding 20px 40px
        width 100%
      span
        position relative
        display inline-block
        vertical-align middle
        padding-left 20px
        &:after
          content ''
          background: url('../images/sprite.png') no-repeat -450px -450px;
          width: 11px;
          height: 16px;
          position absolute
          left 0
          top 50%
          margin-top -9px
      &:hover
        color #fff
        background $red
        span
          &:after
            background-position -450px -475px
  .desc
    border-top 1px solid #fff
    color #222222
    font-size 14px
    padding-top 20px
