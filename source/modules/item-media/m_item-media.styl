.m_item-media
  // border 1px solid #e3e9ea
  border-radius $radius
  overflow hidden
  background #fff
  .image
    height 180px
    background #fff
    a
      display block
      size(100%)
      background-repeat no-repeat
      background-position 50%
      background-size cover
  .details
    padding 20px
    background #fff
    .more
      margin-top 10px
      a
        border 1px solid $yellow
        padding 5px 15px
        display inline-block
        vertical-align middle
        color #333
        font-size 15px
        border-radius $radius
        box-shadow: inset 1px 2px 2px rgba(249,166,26,0.3), 2px 3px 2px -2px rgba(249,166,26,0.3);
        &:hover
          background $yellow
        span
          position relative
          padding-right 20px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -150px -25px;
            width: 12px;
            height: 12px;
            right 0
            top 50%
            margin-top -6px
            position absolute
    .post-date
      color #555555
      font-size 14px
      margin-bottom 10px
    .title
      margin-bottom 10px
      a
        futuris()
        text-transform uppercase
        font-size 15px
        color #222222
        @media MD
          font-size 21px
        &:hover
          color $red
          text-decoration none
    .desc
      color $text-muted
      font-size 14px
  &.horizontal
    padding 30px 0
    border-left none
    border-right none
    border-bottom none
    border-radius 0
    position relative
    //@media XS
    //  padding-bottom 60px !important
    &:last-child
      border-bottom 1px solid #e3e9ea
    .image
      margin-bottom 15px
      @media XS
        width 35%
        float left
        padding-right 25px
        margin-bottom 0
    .details
      padding 0
      @media XS
        float left
        width 65%
        padding-right 25px
        position relative
        padding-bottom 45px
        min-height 180px
      .title a
        font-size 18px
      .more
        @media XS
          position absolute
          left 0
          bottom 0