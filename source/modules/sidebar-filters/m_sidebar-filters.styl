.m_sidebar-filters
  margin-bottom 30px
  box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
  border-radius $radius
  overflow hidden
  .filter-options
    clearfix()
    padding 18px 20px
    background #fff
    .reset,
    .submit
      anim()
      padding 10px 15px
      border-radius $radius
      font-size 15px
      background #fff
      width 47%
      border none
      &:hover
        background $blue
        color #fff
    .submit
      float left
      background $yellow
      color #222
      &:hover
        color #fff
        background $red
    .reset
      float right
      &:hover
        color $red
        background none
        span
          border-color $red
      span
        border-bottom 1px dashed #222


  .dropdown-aside
    border-bottom solid 1px #eeefef
    .dropdown-aside-header
      a
        position relative
        display block
        font-size 14px
        color #000
        bold()
        background #fafafa
        padding 18px 20px
        &:hover
          color $red
        &:after
          anim()
          content ''
          sprite()
          background-position -300px -450px
          width: 10px;
          height: 6px;
          position absolute
          right 20px
          top 50%
          margin-top -3px
    .box
      display none
      padding 0 20px 20px
      .checkbox
        & + .checkbox
          margin-top 10px
    &.open
      .dropdown-aside-header
        a
          background #ffffff
      .dropdown-aside-header a:after
        background-position -300px -475px
      .box
        display block
        background #fff
  .price-range
    margin-bottom 10px
    .noUi-target
      background $yellow
      border-radius 0
      border none
      box-shadow none
    .noUi-horizontal
      height 4px
      .noUi-handle
        left -9px
    .noUi-connect
      background $red
      box-shadow none
    .noUi-handle
      width 16px
      height 16px
      border 2px solid $yellow
      box-shadow 0 2px 2px rgba(0,0,0,.1)
      border-radius 50%
      &:after,
      &:before
        display none
    .noUi-pips-horizontal
      height 10px
      padding 0
      top -3px
      // z-index 10
    .noUi-marker-horizontal.noUi-marker-large,
    .noUi-marker-horizontal.noUi-marker
      height 10px
      background #d1d9da
      display none !important
    .noUi-value-horizontal
      font-size 12px
      font-weight normal
      color #999
      top -20px
      transform none
      &:last-child
        left auto !important
        right 0 !important
  .price-inputs
    clearfix()
    margin-bottom 40px
    input
      width 48%
      height 36px
      border-radius $radius
      border 1px solid #d1d9da
      padding 0 10px
      font-size 12px
      color #222
      &:focus
        border-color $red
    #sidebar-input-start
      float left
    #sidebar-input-finish
      float right
