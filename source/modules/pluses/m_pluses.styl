.m_pluses
  clearfix()
  padding 30px 0
  margin-left -15px
  margin-right -15px
  .column
    width 100%
    float left
    text-align center
    padding 0 20px
    @media XS
      padding-left 60px
      position relative
      text-align left
      margin-bottom 20px
    @media SM
      width 33.333%
    &:last-child
      margin-bottom 0
    .image
      height 100px
      line-height 100px
      text-align center
      @media XS
        position absolute
        left 0
        top 0
        height auto
        line-height 1
      img
        display inline-block
        vertical-align middle
    .title
      futuris()
      font-size 16px
      text-transform uppercase
      margin-bottom 10px
      @media LG
        font-size 17px
    .desc
      color #555
      @media LG
        font-size 15px