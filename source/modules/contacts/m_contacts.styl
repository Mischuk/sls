.m_contacts
  margin-top 20px
  @media SM
    clearfix()
    margin-top 30px
  .contacts-info
    margin-bottom 20px
    background #fff
    box-shadow 1px 1px 4px rgba(0,0,0,.3)
    border-radius $radius
    overflow hidden
    padding 15px
    @media screen and (max-width: 767px)
      height auto !important
    @media SM
      float left
      width 49%
      padding 30px
    .row
      & + .row
        margin-top 10px
        @media SM
          margin-top 30px
    .label
      color #222222
      futuris()
      font-size 15px
      text-transform uppercase
      display block
    .value
      display block
      font-size 15px
    a
      color $red
      &:hover
        color #222
  .contacts-form
    margin-bottom 20px
    background #fff
    box-shadow 1px 1px 4px rgba(0,0,0,.3)
    border-radius $radius
    overflow hidden
    padding 15px
    @media SM
      float right
      width 49%
      padding 30px
    .title
      futuris()
      text-transform uppercase
      font-size 16px
      padding-bottom 15px
      @media SM
        font-size 21px
    .form-row
      clearfix()
      .input
        & + .input
          margin-top 20px
      & + .form-row
        margin-top 30px
        &:last-child
          margin-top 15px
      textarea,
      input
        anim()
        background #fff
        border 1px solid $border
        border-top none
        border-left none
        border-right none
        font-size 16px
        width 100%
        roman()
        &:focus
          font-weight normal
          border-color $red
      input
        height 40px
      textarea
        resize none
      .conditions
        label
          sn()
          position relative
          display inline-block
          vertical-align middle
          padding-left 25px
          cursor pointer
          input[type="checkbox"]
            display none
          input[type="checkbox"]:checked + .icon
            background $red
            border-color $red
            &:after
              opacity 1
              transform scale(1)
          input[type="checkbox"]:checked + .icon + .label
            color #000
          .icon
            anim()
            position absolute
            left 0
            top 0px
            size(20px)
            border 1px solid #d1d9da
            border-radius $radius
            background #fff
            &:after
              anim()
              content ''
              sprite()
              width 11px
              height 8px
              position absolute
              left 50%
              top 50%
              margin-left -5.5px
              margin-top -4px
              background-position -350px 0
              opacity 0
              transform scale(0)
          .label
            display inline-block
            vertical-align middle
            color #222222
            font-size 12px
            line-height 18px
            font-style normal
            a
              color $red
              &:hover
                text-decoration underline
      .submit
        display inline-block
        vertical-align middle
        text-align center
        padding 15px 30px
        roman()
        border-radius $radius
        font-size 15px
        border none
        color #222
        background $yellow
        &:hover
          background $red
          color #fff
.contacts-map
  margin-top 30px
  @media SM
    position relative
    float left
    width 100%
  .contacts-delivery
    position relative
    height 300px
    background #fff
    box-shadow 1px 1px 4px rgba(0,0,0,.3)
    border-radius $radius
    @media SM
      width 200px
      position absolute
      right 30px
      top 50%
      margin-top -120px
      z-index 1
    @media MD
      width 300px
    @media LG
      right 50px
      width 350px
    ul
      li
        padding 10px
        line-height 1
        font-size 15px
        border-bottom 1px solid $border
        anim()
        @media MD
          padding 15px
        &:hover,
        &.current
          background $border
          cursor pointer
        &:last-child
          border-bottom none
  #map,
  #map-multiple
    width 100%
    height 300px
    @media SM
      height 400px
    @media LG
      height 500px
  #map-multiple
    margin-top 10px
