.m_sidebar-nav
  position relative
  margin-bottom 30px
  box-shadow 1px 1px 4px rgba(0,0,0,.3)
  border-radius $radius
  overflow hidden
  li
    border-bottom solid 1px #dcdcdc
    a
      position relative
      display block
      font-size 15px
      color #222
      bold()
      padding 18px 20px
      &:hover
        color $red
      &.current
        color $red
        &:after
          background-position -350px -250px
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -300px -250px;
        width: 12px;
        height: 12px;
        position absolute
        right 20px
        top 50%
        margin-top -6px
