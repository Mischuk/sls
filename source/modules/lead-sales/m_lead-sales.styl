.m_lead-sales
  padding 30px 0
  @media LG
    padding-top 60px
    padding-bottom 45px
    margin-left 0
    margin-right 0
  .slick-slider
    position static
  .slick-arrow
    position absolute
    top 0
    width 16px
    height 16px
    background none
    border none
    text-indent -9999px
    sprite()
    &.slick-disabled
      opacity .25
      cursor default
    &.slick-next
      right 25px
      background-position -250px -250px
      &:hover
        background-position -250px -300px
    &.slick-prev
      background-position -200px -250px
      right 55px
      &:hover
        background-position -200px -300px
  h2
    font-size 24px
    margin-top -5px
    futuris()
    text-transform uppercase
    padding-right 70px
    padding-left 10px
    text-align left
    @media LG
      padding-left 0
    .details
      display block
      padding-top 5px
      @media screen and (min-width: 640px)
        display inline-block
        vertical-align middle
        padding-top 0
        margin-top -7px
        margin-left 30px
      a
        anim()
        border 1px solid $yellow
        color #222
        display inline-block
        vertical-align middle
        padding 5px 10px
        font-size 14px
        roman()
        border-radius $radius
        text-transform none
        box-shadow: inset 1px 2px 2px rgba(249,166,26,0.3), 2px 3px 2px -2px rgba(249,166,26,0.3);
        &:hover
          background $yellow
  .m_item-media
    box-shadow 1px 1px 4px rgba(0,0,0,.3)
    border-radius $radius
  .lead-sales-carousel
    margin-top 15px
    @media LG
      margin-left -10px
      margin-right -10px
    .slide
      padding 10px