.m_bottom-viewed-items
  border-top 1px solid #eeefef
  padding-top 40px
  padding-bottom 20px
  .bottom-viewed-items-nav
    text-align left
    margin-bottom 20px
    a
      anim()
      color #999
      font-size 16px
      font-weight bold
      text-transform uppercase
      border-bottom 1px dashed #999
      display inline-block
      vertical-align middle
      line-height 1
      margin-right 10px
      margin-bottom 10px
      @media SM
        font-size 24px
        margin-right 10px
        margin-left 10px
      &.current
        color #000
        border-color #fff
        cursor default
  .bottom-viewed-items-content
    .bottom-viewed-item
      clearfix()
      display none
      &.enabled
        display block
    .item
      padding 10px
      @media XS
        float left
        width 50%
      @media MD
        width 25%
.bottom-viewed-items-loader
  width: 100px;
  height: 100px;
  border-radius: 100%;
  margin-left auto
  margin-right auto
  z-index 10
  display none
  &.show
    display block

.bottom-viewed-items-loader span
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 100%;
  background-color $blue
  margin: 35px 5px;
  opacity: 0;

.bottom-viewed-items-loader span:nth-child(1)
  animation: opacitychange 1s ease-in-out infinite;
.bottom-viewed-items-loader span:nth-child(2)
  animation: opacitychange 1s ease-in-out 0.33s infinite;
.bottom-viewed-items-loader span:nth-child(3)
  animation: opacitychange 1s ease-in-out 0.66s infinite;
@keyframes opacitychange
  0%, 100%
    opacity: 0;
  60%
    opacity: 1;