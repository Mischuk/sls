.m_order
  .order-bill
    box-shadow 1px 1px 4px rgba(0,0,0,0.3)
    border-radius $radius
    margin-bottom 30px
    padding 30px
    background #fff
    @media LG
      padding-left 30px
      width 300px
      float right
    .items,
    .delivery,
    .total
      clearfix()
    .label
      color #555
      font-size 14px
      float left
    .value
      font-size 14px
      float left
      margin-left 5px
      font-weight normal
      span
        color #000
        bold()
    .items, .delivery
      .value
        font-weight bold
        span
          display inline-block
          vertical-align middle
          position relative
    .total
      padding-top 30px
      border-top 1px solid $border
      line-height 25px
      .label, .value
        font-size 16px
      .value
        font-weight bold
        font-size 18px
        span
          display inline-block
          vertical-align middle
          position relative
    .positions
      padding-bottom 30px
      .items
        margin-bottom 15px
  .order-steps
    @media LG
      padding-right 330px
    .step
      margin-bottom 30px
      background #f7f9f9
      box-shadow 1px 1px 4px rgba(0,0,0,0.3)
      border-radius $radius
      overflow hidden
      &.current
        background #fff
        .step-header
          background url("../images/red_pattern.jpg") repeat 0 0
          color #fff
          span
            color #fff
    .step-header
      position relative
      background #fff8e7
      padding 20px
      font-size 20px
      bold()
      color #222
      cursor default
      // border-bottom 1px solid #eeefef
      &:after
        content ''
        background url("../images/order-step-completed.png") no-repeat 0 0
        size(24px)
        position absolute
        right 20px
        top 50%
        margin-top -12px
        opacity 0
      span
        color #222
    .step-body
      padding 40px 20px
      background #fff
      @media XS
        overflow hidden
      .form-section
        padding-top 15px
        .form-row
          margin-bottom 20px
          &:last-child
            margin-bottom 0
        .label
          font-weight normal
          font-size 12px
          color #555555
          .required
            color $red
        .input
          select
            width 100%
          input
            height 40px
            //&.error
            //  border-color $red

          input,
          textarea
            anim()
            width 100%
            background none
            border none
            border-radius 0
            border-bottom 1px solid #d2d2d2
            padding 15px 0
            font-size 16px
          textarea
            roman()
            resize none
            padding-top 10px
            padding-bottom 0
        .remark
          font-size 12px
          line-height 16px
          color #bebebe
          cursor default
    .step-footer
      clearfix()
      background #fff
      border-top 1px solid #eeefef
      padding 20px
      button
        height 35px
        border 1px solid $yellow
        padding 0 20px
        font-size 15px
        border-radius $radius
        roman()
        @media SM
          padding 0 30px
      .step-prev
        float left
        border 1px solid $yellow
        color #222
        background #fff
        &:hover
          color #222
          border-color $yellow
          background $yellow
      .step-next
        float right
        color #222
        background $yellow
        &:hover
          color #fff
          border-color $red
          background $red
    /*
      STEP 1
    */
    .step-1
      .delivery-self
        .default-icon .icon:after
          background: url('../images/order.png') no-repeat 0 0;
          width: 56px;
          height: 52px;
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          background: url('../images/order.png') no-repeat -226px 0;
          width: 56px;
          height: 52px;
          margin-left -(@width/2)
          margin-top -(@height/2)
      .delivery-courier
        .default-icon .icon:after
          background: url('../images/order.png') no-repeat -84px 0;
          width: 60px;
          height: 51px;
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          background: url('../images/order.png') no-repeat -153px 0;
          width: 60px;
          height: 51px;
          margin-left -(@width/2)
          margin-top -(@height/2)
      .delivery-transport
        .default-icon .icon:after
          background-position -300px -150px
          width 60px
          height 37px
          margin-left -(@width/2)
          margin-top -(@height/2)
        .delivery-form .default-icon-active .icon:after
          width 60px
          height 37px
          margin-left -(@width/2)
          margin-top -(@height/2)
          background-position -400px -150px
      .delivery-courier,
      .delivery-transport
        margin-top 40px
        @media SM
          margin-top 0
      .delivery-transport
        @media SM
          margin-top 40px
      .delivery-self,
      .delivery-courier,
      .delivery-transport
        @media SM
          display inline-block
          vertical-align top
          width 49%
        .default-icon
          cursor pointer
          padding-left 20px
          padding-right 10px
          .icon
            position relative
            size(100px)
            float left
            border-radius 50%
            border 1px solid $border
            &:after
              content ''
              background-image url("../images/order.png")
              background-repeat no-repeat
              position absolute
              left 50%
              top 50%
          .label
            position relative
            z-index 100
            display table
            height 100px
            padding-left 10px
            font-size 14px
            span
              display table-cell
              vertical-align middle
              color $green
              @media LG
                font-size 18px
              i.count
                color #555
                display block
                font-size 12px
                @media LG
                  font-size 14px
        .delivery-form
          display none
          position relative
          top -120px
          margin-bottom -120px
          background #fafafa
          padding 20px
          box-shadow 0 2px 7px #e5eaeb, inset 0 0 0 1px #e3e9ea
          .default-icon-active
            cursor pointer
            overflow hidden
            .icon
              position relative
              size(100px)
              float left
              border-radius 50%
              border 1px solid $red
              background $red
              &:after
                content ''
                background-image url("../images/order.png")
                background-repeat no-repeat
                position absolute
                left 50%
                top 50%
      .delivery-self-map
        margin-top 30px
        #dsmap
          width 100%
          height 400px
      .delivery-self-list
        position relative
        overflow auto
        height 230px
        border 1px solid #e6e6e6
        li
          border-bottom 1px solid #e6e6e6
          font-size 14px
          padding 15px
          a
            color $red
            border-bottom 1px dashed $red
            &:hover
              color #222
              border-color #222
    /*
      STEP 2
    */
    .step-2
      .step-body
        padding 20px
        .form-date
          @media SM
            clearfix()
      .form-section
        padding-top 0
        margin-bottom 20px
        @media SM
          float left
          width 50%
          margin-bottom 0
        &:last-child
          margin-bottom 0
      .inputs
        clearfix()
        @media LG
          padding-right 5px
        .input
          float left
          width 45%
          margin-right 5%
    /*
      STEP 3
    */
    .step-3
      .step-body
        padding 20px
      .form-pay
        .checkbox
          display block
          margin-left 0
          margin-bottom 10px
          &:last-child
            margin-bottom 0
          .label
            font-size 16px
    /*
      STEP 4
    */
    .step-4
      .step-body
        padding 20px
    /*
      STEP Final
    */
    .step-final
      .step-header
        background #fff !important
        color #222 !important
        padding-bottom 0
        &:after
          display none !important
      .step-body
        padding 20px
        .row
          & + .row
            margin-top 10px
        .value,
        .label
          display inline-block
          vertical-align middle
          font-size 16px
        .label
          color #999
        .value
          color #555
      .order-total-items
        padding 10px
        background #fff
        @media MD
          padding 0
        .m_cart
          padding-top 0
          padding-bottom 0
          table
            text-align left
            th,
            td
              box-shadow none
              border none
            th
              color #555555
              font-size 12px
              font-weight normal
              background #fff
              text-transform uppercase
            td
              background none
              vertical-align top

            tr
              border-bottom 1px solid #ebebeb
              @media screen and (max-width: 992px)
                clearfix()
                display block
                position relative
                padding-top 10px
                padding-bottom 10px
                min-height 125px
              @media screen and (max-width: 400px)
                padding-left 0
              &:first-child
                @media screen and (max-width: 992px)
                  display none

            .title
              a
                anim()
                bold()
                color #222
                font-size 15px
                text-decoration underline
                &:hover
                  text-decoration none
                  color $red
            .price
              bold()
              .current
                &:after
                  display none
            .total-items
              bold()
            .total-sum
              bold()
              span
                &:after
                  display none
            .preview
              width 120px
              height 100px
              line-height 98px
              text-align center
              overflow hidden
              border 1px solid #dcdcdc
              margin-left auto
              margin-right auto
              img
                display inline-block
                vertical-align middle
                max-width 96%
                max-height 96%
            .details
              text-align center
              @media MD
                text-align left
              .title
                margin-bottom 0
          .cart-sum-result
            padding 20px
            background #fff
            border-bottom none
            .total
              width 100%
              padding 0
              line-height 1.1
              text-align left
              font-size 24px
              @media XS
                text-align right
              &.delivery
                font-size 15px
                line-height 1
                .sum
                  // display inline-block
                  // vertical-align middle
                  span
                    display inline-block
                    vertical-align middle
                    font-size 15px
                    padding-right 10px
                    margin-top -2px
                    bold()
                    &:after
                      display none
              .label
                display block
                bold()
                @media XS
                  display inline-block
                  vertical-align middle
              .sum
                display inline-block
                vertical-align middle
                bold()
                font-size 24px
                text-align left
                span
                  &:after
                    display none
          .cart-final
            padding-top 0
            border-top none
            .step-footer
              position relative
              border-color #eeefef
              text-align center
              .step-prev
                float none
                display inline-block
                vertical-align middle
                margin-bottom 20px
                @media XS
                  margin-bottom 0
                  float left
              .final-submit
                float right
                a.btn
                  height: 35px;
                  line-height 35px
                  border: 1px solid #ffb400;
                  padding: 0 20px;
                  font-size: 15px;
                  border-radius: 3px;
                  font-family: 'HelveticaNeueCyr-Roman';
                  font-weight: normal;
                  font-style: normal;
                  float: right;
                  color: #222;
                  background: #ffb400;
                  margin 0
                  text-transform none
                  box-shadow none
                  @media SM
                    padding 0 30px
                  &:after
                    display none
                  &:hover
                    background $red
                    border-color $red
                    color #fff
        .m_cart
          table
            td
              @media MD
                vertical-align middle
                text-align left
            tr
              @media MD
                border none
              th, td
                @media MD
                  border-bottom 1px solid $border
            .preview
              @media MD
                padding 5px
                line-height 80px
                margin-top 10px
                margin-bottom 10px
            .price
              margin-top 10px
              margin-bottom 0
              text-align center
              @media MD
                text-align left
                margin-top 0
              .current
                padding-right 0
            .total-items
              margin-left auto
              margin-right auto
              border none
              @media XS
                display block
              @media MD
                margin-left 0
                text-align left
            .total-sum
              margin-top 0
              text-align center
              @media MD
                text-align left
              span
                padding-right 0

          .cart-sum-result
            padding 0 15px
            padding-bottom 15px
            @media MD
              padding-top 15px
              border-left none
              border-right none
            .total
              .label, .sum
                display inline-block
                vertical-align middle
                color #222
                margin-right 0
          .cart-final
            .step-footer
              padding 0
              padding-top 30px
              @media screen and (min-width: 480px)
                padding-top 15px
              .final-submit
                a
                  line-height 35px !important
    // Params
    .step-body, .step-footer
      display none
    .step-final
      display none
      &.current
        display block
    .step
      &.current
        .step-body, .step-footer
          display block
      &.complete
        .step-header
          background: url(../images/red_pattern.jpg) repeat 0 0;
          color: #fff;
          span
            color #fff
        .step-header:after
          opacity 1
  .completed
    margin-top 30px
    .completed-pay
      box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
      background #fff
      padding 20px
      border-radius $radius
      .title
        futuris()
        font-size 24px
        padding-bottom 15px
        margin-bottom 15px
        @media MD
          font-size 30px
      p
        font-size 16px
        line-height 24px
        margin-bottom 0
        color #000
        @media MD
          font-size 18px
          line-height 32px
        b
          display inline-block
      .remark
        color #555555
        font-size 14px
      .action
        margin-top 30px
        margin-bottom 30px
        a
          background $yellow
          color #222
          padding 10px 20px
          font-size 15px
          border-radius $radius
          anim()
          display inline-block
          &:hover
            color #fff
            background $red
      .pay-variant
        clearfix()
        img
          max-width 100%
        .pay-title
          color #999999
          margin-bottom 5px
        .label
          color #999999
          margin-bottom 5px
          font-size 18px
        .image
          height 54px
          line-height 54px
          img
            display inline-block
            vertical-align middle
            max-width 100%
            max-height 100%
        .column
          margin-bottom 20px
          @media SM
            float left
            width 33.333%
            padding-right 15px
          @media LG
            width auto
            margin-right 75px
    .completed-order-info
      padding-left 80px
      position relative
      margin-bottom 30px
      @media XS
        padding-left 100px
        margin-bottom 40px
      &:after
        content ''
        width 70px
        height 70px
        background url("../images/order-completed.png") no-repeat 0 0
        background-size cover
        position absolute
        left 0
        top 50%
        margin-top -35px
      b
        bold()
      p
        margin-bottom 0
        & + p
          margin-top 10px