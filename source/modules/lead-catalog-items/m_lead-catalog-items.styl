.m_lead-catalog-items
  margin-top -15px
  margin-bottom 15px
  box-shadow 1px 1px 4px rgba(0,0,0,.3)
  border-radius $radius
  overflow hidden
  @media MD
    margin-top 0
  .title
    display none
    @media MD
      display block
      futuris()
      display block
      color #000
      text-transform uppercase
      font-size 18px
      line-height 1
      padding 20px
      background #fff
  .mobile-action
    @media MD
      display none
    a
      futuris()
      display block
      color #000
      text-transform uppercase
      font-size 18px
      line-height 1
      padding 20px
      background #fff
      &.is-open
        background $yellow
  ul
    display none
    border-top 1px solid #dcdcdc
    @media MD
      display block
    li
      a
        padding 5px 20px
        display block
        background #fff
        color #555555
        font-size 15px
        line-height 24px
        @media MD
          padding 8px 20px
        &:hover
          color #333
          background $yellow