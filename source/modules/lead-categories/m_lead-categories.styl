.m_lead-categories
  margin-left -15px
  margin-right -15px
  .list
    clearfix()
    .item
      position relative
      height 250px
      margin-top 15px
      box-shadow: 1px 1px 4px rgba(0,0,0,0.3);
      border-radius $radius
      overflow hidden
      @media SM
        float left
        width 49%
        margin-top 0
        &:first-child
          margin-right 2%
        &:last-child
          width 100%
          margin-top 2%
      &:first-child
        margin-top 0
      a
        display block
        width 100%
        height 100%
        background-repeat no-repeat
        background-position 50%
        background-size cover
        &:after
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #000
          opacity 0
          anim()
        &:hover
          &:after
            opacity .1
        .title
          text-align center
          padding-top 20px
          position relative
          z-index 1
          span
            color #000
            text-decoration underline
            font-size 21px
            line-height 1
            display inline-block
            vertical-align middle
            futuris()
            @media XS
              font-size 27px
            &:hover
              color $red
