.m_menu-phone
  anim()
  position absolute
  left 0
  top -500%
  width 100%
  height auto
  background #fff
  z-index 750
  &.open
    top 100%
  .item
    border-top 1px solid #eeefef
    &.dropdown
      .category
        position relative
        a:after
          content ''
          background: url('../images/sprite.png') no-repeat -250px -250px;
          width: 16px;
          height: 20px;
          position absolute
          right 15px
          top 50%
          margin-top -8px
    &.open
      .category
        background url("../images/red_pattern.jpg") repeat 0 0
        a:after
          background-position -250px -350px
        a
          color #fff
      ul
        height auto
        padding 10px 20px
    .category
      a
        display block
        color #000
        font-size 18px
        padding 15px 10px
    ul
      height 0
      overflow hidden
      background #fff
      a
        display block
        padding 10px 0
        color #333
        &:hover
          color $red

