body
  roman()
  font-size 16px
  line-height 1.4
h1, h2, h3, h4, h5, h6
  line-height 1.2
  futuris()
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px
a[href^="tel"]
  cursor default
b
  bold()
p
  margin-top 0
  margin-bottom 20px
  &:last-child
    margin-bottom 0
.red
  color $yellow
.page-heading
  position relative
  h2
    font-size 21px
    text-transform uppercase
    padding 10px 0
    color #222222
    @media XS
      font-size 24px
    @media SM
      font-size 30px
    @media MD
      padding-right 200px
    @media LG
      font-size 36px
    &.center
      text-align center
      margin-top 30px
      padding-right 0
  .backward
    @media MD
      position absolute
      right 0
      top 10px
    @media LG
      top 13px
    a
      anim()
      display inline-block
      height 100%
      width auto
      border 1px solid $yellow
      border-radius $radius
      color #333
      padding 5px 10px
      box-shadow inset 1px 2px 2px rgba(249, 166, 26, .3), 2px 3px 2px -2px rgba(249, 166, 26, .3)
      &:hover
        background $yellow
article
  &.center
    text-align center
  img
    width 100%
    height auto
    margin-bottom 20px
    @media screen and (min-width: 568px)
      float left
      max-width 100%
      width auto
      margin-right 20px
      margin-bottom 0
    @media SM
      float none
      width 100%
      margin-right 0
      margin-bottom 20px
    @media MD
      float left
      max-width 100%
      width auto
      margin-right 20px
      margin-bottom 0
  h2
    position relative
    font-size 24px
    text-transform uppercase
    margin-bottom 20px
  h3
    font-size 18px
    text-transform uppercase
    margin-bottom 20px
  h4
    font-size 14px
    text-transform uppercase
    margin-bottom 10px
  a
    color $red
    text-decoration underline
    &:hover
      color #000
      text-decoration none
  p
    font-size 14px
    line-height 22px
    color $text-muted
    &.lead-paragraph
      font-size 16px
      font-style italic
    &:last-child
      margin-bottom 0
  ul, ol
    margin-bottom 20px
    font-size 14px
    padding-left 10px
    li
      position relative
      padding 10px 0
      color #555
  ul
    li
      position relative
      ul
        padding-left 0
        margin-bottom 0
        li
          padding 7px 0
          &:before
            display none !important
    &.large
      font-size 16px
      li ul
        margin-top 10px
      li:before
        top 16px
  ol
    padding-left 0
    li
      counter-increment step-counter
      &:before
        content counter(step-counter) '. '
        color $red
  .m_detail-filters
    margin-bottom 30px